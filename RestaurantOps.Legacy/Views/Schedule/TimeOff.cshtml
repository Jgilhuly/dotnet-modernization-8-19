@model IEnumerable<RestaurantOps.Legacy.Models.TimeOff>

@{
    ViewData["Title"] = "Pending Time-Off";
}

<h1>Pending Time-Off Requests</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Employee</th>
            <th>Start</th>
            <th>End</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var req in Model)
    {
        <tr>
            <td>@req.EmployeeName</td>
            <td>@req.StartDate:yyyy-MM-dd</td>
            <td>@req.EndDate:yyyy-MM-dd</td>
            <td>
                <form asp-action="SetTimeOffStatus" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@req.TimeOffId" />
                    <input type="hidden" name="status" value="Approved" />
                    <button class="btn btn-sm btn-success">Approve</button>
                </form>
                <form asp-action="SetTimeOffStatus" method="post" class="d-inline ms-1">
                    <input type="hidden" name="id" value="@req.TimeOffId" />
                    <input type="hidden" name="status" value="Denied" />
                    <button class="btn btn-sm btn-danger">Deny</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to Schedule</a> 