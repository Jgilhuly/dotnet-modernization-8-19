@model dynamic

<div class="alert alert-@Model.Type fade-in" role="alert">
    <div class="flex items-center">
        @if (!string.IsNullOrEmpty(Model.Icon))
        {
            @Html.Raw(Model.Icon)
        }
        <span class="ml-2 text-sm font-medium">@Model.Message</span>
        @if (Model.Dismissible == true)
        {
            <button type="button" class="ml-auto -mx-1.5 -my-1.5 rounded-lg focus:ring-2 p-1.5 inline-flex h-8 w-8 hover:bg-gray-100 focus:outline-none" onclick="this.parentElement.parentElement.remove()">
                <span class="sr-only">Close</span>
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                </svg>
            </button>
        }
    </div>
</div>