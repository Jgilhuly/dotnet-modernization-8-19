@model IEnumerable<RestaurantOps.Legacy.Models.Ingredient>

@{
    ViewData["Title"] = "Inventory";
    var lowStockCount = Model.Count(i => i.NeedsReorder);
}

@await Html.PartialAsync("Components/_PageHeader", new {
    Title = "Inventory Management",
    Description = "Track ingredients and manage stock levels", 
    Actions = @$"<a asp-action=""Create"" class=""btn-success"">
                    <svg class=""w-4 h-4 mr-2"" fill=""currentColor"" viewBox=""0 0 16 16"">
                        <path d=""M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z""/>
                        <path d=""M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z""/>
                    </svg>
                    Add Ingredient
                 </a>
                 <a asp-action=""ReorderReport"" class=""btn-outline"">
                    <svg class=""w-4 h-4 mr-2"" fill=""currentColor"" viewBox=""0 0 16 16"">
                        <path d=""M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.146.146 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.163.163 0 0 1-.054.06.116.116 0 0 1-.066.017H1.146a.115.115 0 0 1-.066-.017.163.163 0 0 1-.054-.06.176.176 0 0 1 .002-.183L7.884 2.073a.147.147 0 0 1 .054-.057zm1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566z""/>
                        <path d=""M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995z""/>
                    </svg>
                    Reorder Report
                    {(lowStockCount > 0 ? $@"<span class=""status-badge status-badge-warning ml-2"">{lowStockCount}</span>" : "")}
                 </a>"
})

@if (TempData["Error"] is string err)
{
    @await Html.PartialAsync("Components/_Alert", new {
        Type = "danger",
        Message = err,
        Icon = @"<svg class=""w-5 h-5"" fill=""currentColor"" viewBox=""0 0 16 16""><path d=""M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z""/><path d=""M7.002 11a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 4.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 4.995z""/></svg>",
        Dismissible = true
    })
}

<div class="table-container">
    <table class="table" data-enhanced>
        <thead>
            <tr>
                <th data-sortable>Name</th>
                <th>Unit</th>
                <th class="text-center">On Hand</th>
                <th class="text-center" data-sortable>Reorder Level</th>
                <th>Status</th>
                <th>Adjust Stock</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var ing in Model.OrderBy(i => i.Name))
        {
            var rowClass = ing.NeedsReorder ? "bg-yellow-50" : "";
            <tr class="@rowClass">
                <td>
                    <div class="font-medium text-gray-900">@ing.Name</div>
                </td>
                <td>
                    <span class="text-gray-500 text-sm">@ing.Unit</span>
                </td>
                <td class="text-center">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                        @ing.QuantityOnHand
                    </span>
                </td>
                <td class="text-center text-gray-900">
                    @ing.ReorderThreshold
                </td>
                <td>
                    <div class="flex items-center space-x-3">
                        @if (ing.NeedsReorder)
                        {
                            @await Html.PartialAsync("Components/_StatusBadge", new {
                                Type = "warning",
                                Text = "Reorder",
                                Icon = @"<svg class=""w-4 h-4 mr-1"" fill=""currentColor"" viewBox=""0 0 16 16""><path d=""M7.938 2.016A.13.13 0 0 1 8.002 2a.13.13 0 0 1 .063.016.146.146 0 0 1 .054.057l6.857 11.667c.036.06.035.124.002.183a.163.163 0 0 1-.054.06.116.116 0 0 1-.066.017H1.146a.115.115 0 0 1-.066-.017.163.163 0 0 1-.054-.06.176.176 0 0 1 .002-.183L7.884 2.073a.147.147 0 0 1 .054-.057zm1.044-.45a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566z""/><path d=""M7.002 12a1 1 0 1 1 2 0 1 1 0 0 1-2 0zM7.1 5.995a.905.905 0 1 1 1.8 0l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995z""/></svg>"
                            })
                        }
                        else
                        {
                            @await Html.PartialAsync("Components/_StatusBadge", new {
                                Type = "success",
                                Text = "In Stock",
                                Icon = @"<svg class=""w-4 h-4 mr-1"" fill=""currentColor"" viewBox=""0 0 16 16""><path d=""M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z""/><path d=""M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z""/></svg>"
                            })
                        }
                        <a asp-action="Edit" asp-route-id="@ing.IngredientId" 
                           class="inline-flex items-center px-2.5 py-1.5 border border-gray-300 shadow-sm text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2">
                            <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                            </svg>
                            Edit
                        </a>
                    </div>
                </td>
                <td>
                    <form asp-action="Adjust" method="post" class="flex items-center space-x-2">
                        <input type="hidden" name="ingredientId" value="@ing.IngredientId" />
                        <div class="flex items-center">
                            <span class="inline-flex items-center px-3 py-2 border border-r-0 border-gray-300 bg-gray-50 text-gray-500 text-sm rounded-l-md">Â±</span>
                            <input type="number" step="0.1" name="quantityChange" 
                                   class="form-control rounded-l-none w-20" placeholder="Qty" required />
                        </div>
                        <input type="text" name="notes" class="form-control w-32" placeholder="Notes" />
                        <button type="submit" class="btn-primary text-xs px-3 py-1">Apply</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div> 