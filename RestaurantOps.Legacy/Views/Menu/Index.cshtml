@model IEnumerable<RestaurantOps.Legacy.Models.MenuItem>

@{
    ViewData["Title"] = "Menu";
    var groupedItems = Model.GroupBy(m => m.CategoryName).OrderBy(g => g.Key);
}

@await Html.PartialAsync("Components/_PageHeader", new {
    Title = "Menu Management",
    Description = "Manage your restaurant's menu items and categories",
    Actions = @"<a class=""btn-success"" asp-action=""Create"">
                    <svg class=""w-4 h-4 mr-2"" fill=""currentColor"" viewBox=""0 0 16 16"">
                        <path d=""M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z""/>
                        <path d=""M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z""/>
                    </svg>
                    Add New Item
                 </a>"
})

@foreach (var category in groupedItems)
{
    <div class="card mb-6">
        <div class="card-header">
            <h5 class="text-lg font-semibold">@category.Key</h5>
        </div>
        <div class="table-container rounded-t-none">
            <table class="table" data-enhanced>
                <thead>
                    <tr>
                        <th data-sortable>Name</th>
                        <th>Description</th>
                        <th class="text-right" data-sortable>Price</th>
                        <th class="text-right">Actions</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var item in category.OrderBy(i => i.Name))
                {
                    <tr>
                        <td>
                            <div class="font-semibold text-gray-900">@item.Name</div>
                        </td>
                        <td>
                            <div class="text-gray-600 text-sm">@item.Description</div>
                        </td>
                        <td class="text-right">
                            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                                @item.Price.ToString("C")
                            </span>
                        </td>
                        <td class="text-right">
                            <div class="flex items-center justify-end space-x-2">
                                <a asp-action="Edit" asp-route-id="@item.MenuItemId" 
                                   class="inline-flex items-center p-2 border border-gray-300 rounded-md shadow-sm text-xs font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
                                   title="Edit">
                                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 16 16">
                                        <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                                    </svg>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.MenuItemId" 
                                   class="inline-flex items-center p-2 border border-red-300 rounded-md shadow-sm text-xs font-medium text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2"
                                   title="Delete"
                                   onclick="return confirm('Are you sure you want to delete this menu item?');">
                                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                    </svg>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
} 